<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#69CCAF"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/diagnosis_Image_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/medical_diagnosis"
        android:contentDescription="@string/diagnose_yourself_for_covid_19_or_any_other_disease" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/diagnosis_Image_view"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:textAlignment="center"
        android:text="@string/diagnose_yourself_for_covid_19_or_any_other_disease"
        android:textColor="#161659"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>